class Solution {
    public ArrayList<Integer> kLargest(int[] arr, int k) {
        // Your code here
        Arrays.sort(arr);
        int sum=0;
        ArrayList<Integer> list= new ArrayList<>();
        for(int i=arr.length-1;i>=0 && k!=0;i--){
            list.add(arr[i]);
            k--;
        }
        return list;
    }
    
    
}
